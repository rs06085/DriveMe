<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Your Listed Cars", cars_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "Your Trips", your_trips_path, class: "sidebar-link active" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Your Trips
      </div>
      <div class="panel-body">
        <% @trips.each do |trip| %>
          <div class="row">
            <div class="col-md-2">
              <%= trip.start_date.strftime('%v') %>
            </div>
            <div class="col-md-6">
              <%= link_to car_path(trip.car) do %>
                <%= image_tag trip.car.photos.first.image.url(:thumb) %>
              <% end %>
            </div>
            <div class="col-md-2">
              <%= link_to user_path(trip.car.user) do %>
                <%= image_tag trip.car.user.image, size: 60, class: "img-circle" %>
              <% end %>
            </div>
            <div class="col-md-2">
              <h4>$<%= trip.total %></h4>
            </div>
          </div>
          <hr>
        <% end %>
      </div>
    </div>
  </div>
</div>
